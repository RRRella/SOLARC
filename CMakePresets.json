{
    "version": 6,
    "cmakeMinimumRequired": { "major": 3, "minor": 22, "patch": 0 },

    "configurePresets": [
        {
            "name": "windows-msvc-debug",
            "displayName": "Windows MSVC Debug (vcpkg)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/windows-msvc-debug",

            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },

            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },

        {
            "name": "windows-msvc-release",
            "displayName": "Windows MSVC Release (vcpkg)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/windows-msvc-release",

            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },

            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },

        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/linux-gcc-debug",

            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },

            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },

        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/linux-gcc-release",

            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },

            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],

    "buildPresets": [
        { "name": "windows-msvc-debug", "configurePreset": "windows-msvc-debug" },
        { "name": "windows-msvc-release", "configurePreset": "windows-msvc-release" },
        { "name": "linux-gcc-debug", "configurePreset": "linux-gcc-debug" },
        { "name": "linux-gcc-release", "configurePreset": "linux-gcc-release" }
    ],

    "testPresets": [
        { "name": "windows-msvc-debug", "configurePreset": "windows-msvc-debug" },
        { "name": "linux-gcc-debug", "configurePreset": "linux-gcc-debug" }
    ]
}
